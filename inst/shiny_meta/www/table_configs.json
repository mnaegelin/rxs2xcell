        "aff_dep":
        {
            "col_header": "Department",
            "col_header_tippy": "Department at primary affiliation",
            "type": "text",
            "required": false
        },
        "aff_street":
        {
            "col_header": "Street",
            "col_header_tippy": "",
            "type": "text",
            "required": false
        },
        "aff_plz":
        {
            "col_header": "Postal code",
            "col_header_tippy": "",
            "type": "character",
            "required": false
        },
        "aff_city":
        {
            "col_header": "City",
            "col_header_tippy": "",
            "type": "character",
            "required": false
        },
        "org_country":
        {
            "col_header": "Country",
            "col_header_tippy": "Country code and name (ISO 3166-1 alpha-2)",
